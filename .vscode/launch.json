  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Electron: Main",
      "skipFiles": ["<node_internals>/**"],
      "preLaunchTask": "prestart",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "runtimeArgs": ["--remote-debugging-port=9223"],
      "program": "${workspaceFolder}/build/main/main.js"
    }
  ]
}
